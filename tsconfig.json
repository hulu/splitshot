{
    "compilerOptions": {
        "outDir": "lib/",
        "declaration": true,
        "declarationDir": "types/",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "es6",
        "pretty": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "lib": [
            "es2015",
            "es2016.array.include"
        ],
        // check ./typings for module declarations before node_modules
        "baseUrl": ".",
        "paths": {
            "*": [
                "./typings/*",
                "*"
            ]
        }
    },
    "include": [
        "src/"
    ]
}
